<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Buckeye Connect</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body class="bg-gray-100">
  <nav class="bg-red-600 text-white p-4 shadow-lg"><img src="/images/link-solid.svg" alt="Buckeye Link" class="h-6 w-6 inline mr-2">Buckeye Connect</nav>
  <div class="container mx-auto px-4 py-8">
    <div id="bio-box" class="bg-white rounded-lg shadow-xl p-6 mb-6 max-w-md mx-auto h-64 border border-red-200">
      <!-- Profile Circle -->
      <div class="w-20 h-20 bg-gray-300 rounded-full mx-auto mb-4 flex items-center justify-center">
        <!-- Placeholder for profile image -->
      </div>
      
      <!-- Name -->
      <h2 class="text-xl font-bold text-gray-800 text-center mb-2">Eric Ishekwene</h2>
      
      <!-- Bio -->
      <p class="text-gray-600 text-center mb-4">OSU Student | Engineering Major | Go Bucks! ðŸŒ°</p>
      
      <!-- Edit Profile Button -->
      <button class="flex items-center justify-center mx-auto bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg transition-colors">
        <img src="/images/link-solid.svg" alt="Edit" class="h-4 w-4 mr-2 filter brightness-0 invert">
        Edit Profile
      </button>
    </div>
    
    <% links.forEach(link => { %>
      <div class="max-w-md mx-auto mb-8">
        <div class="rounded-lg bg-white text-gray-800 group hover:scale-[1.02] transition-all duration-200 border-2 border-transparent hover:border-red-500/20 shadow-md hover:shadow-lg">
          <div class="p-0">
            <a href="<%= link.url %>" target="_blank">
              <button class="flex items-center justify-between p-4 rounded-lg <%= link.bgClass %> <%= link.textColor %> hover:opacity-90 transition-opacity w-full">
                <div class="flex items-center space-x-3">
                  <img src="<%= link.icon %>" alt="<%= link.name %>" class="w-5 h-5 <%= link.name === 'Snapchat' ? '' : 'filter brightness-0 invert' %>">
                  <span class="font-semibold"><%= link.name %></span>
                </div>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4 opacity-70">
                  <path d="M15 3h6v6"></path>
                  <path d="M10 14 21 3"></path>
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                </svg>
              </button>
            </a>
          </div>
        </div>
      </div>
    <% }) %>
    
  </div>
</body>
</html>
